generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  TECHNICIAN
}

enum MaintenanceType {
  CORRECTIVE
  PREVENTIVE
}

enum RequestStage {
  NEW
  IN_PROGRESS
  REPAIRED
  SCRAP
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

model Team {
  id                  String               @id @default(uuid())
  name                String               @unique
  company             String
  users               User[]
  createdAt           DateTime             @default(now())
  maintenanceRequests MaintenanceRequest[]
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  role     Role    @default(TECHNICIAN)
  teamId   String?
  team     Team?   @relation(fields: [teamId], references: [id])

  assignedRequests MaintenanceRequest[] @relation("TechnicianRequests")
  createdRequests  MaintenanceRequest[] @relation("CreatedRequests")

  createdAt DateTime @default(now())
}

model EquipmentCategory {
  id          Int    @id @default(autoincrement())
  name        String
  responsible String
  company     String

  equipments Equipment[]

  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  maintenanceRequests MaintenanceRequest[]
}

model Equipment {
  id           Int     @id @default(autoincrement())
  name         String
  serialNumber String?

  company    String
  usedBy     String // Employee / Department
  employee   String?
  department String?

  technician      String
  maintenanceTeam String?

  assignedDate DateTime?
  scrapDate    DateTime?

  location    String?
  workCenter  String?
  description String?

  categoryId Int
  category   EquipmentCategory @relation(fields: [categoryId], references: [id])

  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  maintenanceRequests MaintenanceRequest[]
}

model MaintenanceRequest {
  id String @id @default(uuid())

  subject     String
  description String?

  // Type & workflow
  type     MaintenanceType
  stage    RequestStage    @default(NEW)
  priority Priority        @default(MEDIUM)

  // Equipment & category
  equipmentId Int
  equipment   Equipment @relation(fields: [equipmentId], references: [id])

  categoryId Int
  category   EquipmentCategory @relation(fields: [categoryId], references: [id])

  // Assignment
  teamId String?
  team   Team?   @relation(fields: [teamId], references: [id])

  technicianId String?
  technician   User?   @relation("TechnicianRequests", fields: [technicianId], references: [id])

  createdById String
  createdBy   User   @relation("CreatedRequests", fields: [createdById], references: [id])

  // Dates & tracking
  requestDate   DateTime  @default(now())
  scheduledDate DateTime?
  durationHours Float?

  // Company (simple string, as decided)
  company String

  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  workCenter   WorkCenter? @relation(fields: [workCenterId], references: [id])
  workCenterId Int?
}

model WorkCenter {
  id          Int     @id @default(autoincrement())
  name        String
  code        String?
  tag         String?
  costPerHour Float?
  capacity    Float?
  efficiency  Float?
  oeeTarget   Float?
  company     String?

  // âœ… ADD THIS
  maintenanceRequests MaintenanceRequest[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
