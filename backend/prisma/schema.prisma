generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  MANAGER
  TECHNICIAN
}

model Team {
  id        String   @id @default(uuid())
  name      String   @unique
  company   String
  users     User[]
  createdAt DateTime @default(now())
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String  @unique
  password String
  role     Role    @default(TECHNICIAN)
  teamId   String?
  team     Team?   @relation(fields: [teamId], references: [id])

  createdAt DateTime @default(now())
}

model EquipmentCategory {
  id          Int       @id @default(autoincrement())
  name        String
  responsible String
  company     String

  equipments  Equipment[]

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Equipment {
  id              Int       @id @default(autoincrement())
  name            String
  serialNumber    String?

  company         String
  usedBy          String        // Employee / Department
  employee        String?
  department      String?

  technician      String
  maintenanceTeam String?

  assignedDate    DateTime?
  scrapDate       DateTime?

  location        String?
  workCenter      String?
  description     String?

  categoryId      Int
  category        EquipmentCategory @relation(fields: [categoryId], references: [id])

  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}